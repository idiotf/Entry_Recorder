{
  "name": "Entry Recorder",
  "description": "엔트리 작품을 동영상으로 녹화해줍니다.",
  "version": "0.0.1",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "dist/worker.js"
  },
  "permissions": ["contextMenus", "scripting", "activeTab"],
  "host_permissions": ["https://playentry.org/*"],
  "browser_specific_settings": {
    "gecko": {
      "id": "{5fede3e0-7b2d-4d1e-9ce1-3b3bcdb5c07e}"
    }
  }
}
